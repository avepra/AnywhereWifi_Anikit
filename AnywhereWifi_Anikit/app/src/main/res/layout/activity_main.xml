<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    android:fillViewport="true">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/background">


        <com.example.asalunkhe.anywherewifi.CustomTextViewTitle
            android:id="@+id/textVendorName"
            android:text="Wi-Fi Availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NotificationName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/router" />

                <com.example.asalunkhe.anywherewifi.CustomTextView
                    android:id="@+id/textVendorValue"
                    android:text="123456789012345678901234567890"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/NotificationValue"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/continue_layout"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <com.example.asalunkhe.anywherewifi.CustomTextView
                    android:id="@+id/textConnetQue"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text=" Do you want to connect?"
                    android:textColor="@color/blue"
                    android:textSize="16dp" />
                <Button
                    android:id="@+id/buttonConnectYes"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="Yes"
                    android:background="@drawable/button"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/buttonConnectNo"
                    android:layout_width="80dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:text="No"
                    android:background="@drawable/button"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.example.asalunkhe.anywherewifi.CustomTextViewTitle
            android:id="@+id/textEASName"
            android:text="Emergency Alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NotificationName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/alert2" />
                <com.example.asalunkhe.anywherewifi.CustomTextView
                    android:id="@+id/textEASValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="eas"
                    android:textAppearance="@style/NotificationValue"
                    android:layout_weight="0.42" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <com.example.asalunkhe.anywherewifi.CustomTextViewTitle
            android:id="@+id/textADName"
            android:text="Targeted AD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NotificationName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ad_icon" />

            <com.example.asalunkhe.anywherewifi.CustomTextView
                android:id="@+id/textADValue"
                android:text="ad"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/NotificationValue"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.example.asalunkhe.anywherewifi.CustomTextViewTitle
            android:id="@+id/textLiveName"
            android:text="Live Updates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NotificationName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/news" />
            <com.example.asalunkhe.anywherewifi.CustomTextView
                android:id="@+id/textLiveValue"
                android:text="live"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/NotificationValue"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.example.asalunkhe.anywherewifi.CustomTextViewTitle
            android:id="@+id/textInternetAvail"
            android:text="Internet Availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NotificationName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/internet" />
                <com.example.asalunkhe.anywherewifi.CustomTextView
                    android:id="@+id/textInternetValue"
                    android:text="Connected"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/NotificationValue"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>